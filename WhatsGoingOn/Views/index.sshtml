<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <title>What's Going On?</title>
</head>

<body>

<table>
    <tr>
        <th>Total Open Issues</th>
        <td>@Model.TotalOpenIssues</td>
    </tr>

    <tr>
        <th>Oldest Issue</th>
        <td>@Model.OldestIssueAge days</td>
    </tr>
</table>

    <ol>
        @Each.TopTenOldest
        <li>
            <a href="@Current.HtmlUrl">@Current.Title</a>
        </li>
        @EndEach
    </ol>
</body>
</html>
